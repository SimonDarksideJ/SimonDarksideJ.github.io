source 'https://rubygems.org'

gem 'jekyll', '~> 4.3'

# Windows timezone support (required by Jekyll on Windows)
gem 'tzinfo', platforms: [:mingw, :mswin, :x64_mingw]
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw]

# Windows file watcher (avoids polling)
gem 'wdm', '>= 0.1.0', platforms: [:mingw, :mswin, :x64_mingw]

group :jekyll_plugins do
  gem 'jekyll-paginate'
  gem 'jekyll-feed'
  gem 'jekyll-sitemap'
  gem 'jekyll-seo-tag'
  gem 'jekyll-archives'
end
